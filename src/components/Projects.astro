---
import HTML from "./icons/HTML.astro";
import CSS from "./icons/CSS.astro";
import JavaScript from "./icons/JavaScript.astro";
import Java from "./icons/Java.astro";
import Spring from "./icons/Spring.astro";
import Sql from "./icons/Sql.astro";
const TAGS = {
  HTML: {
    name: "HTML",
    icon: HTML,
  },
  CSS: {
    name: "CSS",
    icon: CSS,
  },
  JavaScript: {
    name: "JavaScript",
    icon: JavaScript,
  },
  Java: {
    name: "Java",
    icon: Java,
  },
  Spring: {
    name: "Spring",
    icon: Spring,
  },
  SQL: {
    name: "SQL",
    icon: Sql,
  },
};

const PROJECTS = [
  {
    title: "API REST de Gestión Integral de Personas y Libros",
    description:
      "Aplicación backend robusta para la gestión eficiente de personas y libros; ofrece API RESTful documentada, integración con base de datos y arquitectura escalable, ideal como base para sistemas de gestión modernos.",
    link: "",
    gitHub: "https://github.com/AlvaroTapia-f/ProyectoApiRestCompleto",
    srcImg: "./APIRESTExample.webp",
    tags: [TAGS.Java, TAGS.Spring, TAGS.SQL],
  },
];
import ProjectCard from "./ProjectCard.astro";
---

{
  PROJECTS.map((project) => (
    <ProjectCard
      title={project.title}
      srcImg={project.srcImg}
      description={project.description}
      link={project.link}
      gitHub={project.gitHub}
      tags={project.tags}
    />
  ))
}
